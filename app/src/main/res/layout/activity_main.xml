<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/chocolatos"
    android:paddingHorizontal="20dp"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:padding="20dp"
        app:lottie_fileName="hot_coffe.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat datang di KopiMantan"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan nama kamu"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginVertical="10dp"
        />

    <EditText
        android:id="@+id/etPesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan jumlah pesanan"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginVertical="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan Sekarang"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        app:backgroundTint="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Harga :"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:letterSpacing="0.1"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0000xxx"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:letterSpacing="0.1"/>



</LinearLayout>